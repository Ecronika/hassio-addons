{
  "name": "Remote Backup",
  "version": "0.8",
  "slug": "remote_backup",
  "description": "Exploit hass cli backups and SCP to create remote backups to specified server",
  "url": "https://github.com/overkill32/hassio-remote-backup",
  "init": false, 
  "startup": "once",
  "boot": "manual",
  "hassio_api": true,
  "hassio_role": "backup",
  "map": ["backup:rw"],
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "options": {
    "ssh_host": "",
    "ssh_port": 22,
    "ssh_user": "",
    "ssh_key": [],
    "remote_directory": "",
    "password": "",
    "keep_local_backup": ""
  },
  "schema": {
    "ssh_host": "str",
    "ssh_port": "int",
    "ssh_user": "str",
    "ssh_key": ["str"],
    "remote_directory": "str",
    "password": "str",
    "keep_local_backup": "match(^(all|[+]?\\d*)$)"
  }
}
